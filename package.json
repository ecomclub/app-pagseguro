{
  "name": "pagseguro",
  "private": true,
  "version": "0.5.50",
  "description": "Pagseguro for E-Com Plus",
  "main": "main.js",
  "scripts": {
    "start": "ECOM_AUTH_DB=/var/dbs/pagseguro.sqlite LOGGER_OUTPUT=/var/log/nodejs/pagseguro.out LOGGER_ERRORS=/var/log/nodejs/pagseguro.error nodemon --inspect main.js",
    "release": "standard-version",
    "publish:market": "node ./scripts/market-publication.js"
  },
  "dependencies": {
    "@ecomplus/application-sdk": "^1.12.3",
    "axios": "^0.19.2",
    "console-files": "^2.3.1",
    "express": "4.x",
    "jstoxml": "^1.6.6",
    "sqlite3": "^4.2.0",
    "xml2json": "^0.11.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "standard": "^14.3.4",
    "standard-version": "^7.1.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
